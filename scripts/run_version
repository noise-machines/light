# Call clean_up if the user
# hits ctrl-c.
trap clean_up INT

function clean_up() {
  echo "" &&
  echo "Cleaning up source directory." &&
  rm -r src &&

  echo "Restoring source code backup." &&
  mv src_backup src
}

echo "Backing up current source code." &&
mv src src_backup &&

echo "Copying version $1 $2 to source directory." &&
cp -r versions/"$1 $2" src &&

echo "Running version $1 $2." &&
echo "" &&
cargo run &&

clean_up